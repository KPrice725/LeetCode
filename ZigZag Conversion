import java.util.ArrayList;

public class Solution {

	public static void main(String[] args) {
		System.out.println(convert("PAYPALISHIRING", 3));
	}

	public static String convert(String s, int numRows) {
		String[] strings = new String[numRows];
		int index = 0;
		int arrayIndexPosition = 0;
		
		for(int i = 0; i < numRows; i++) {
			strings[i] = s.substring(index, index + 1);
			index++;
			arrayIndexPosition++;
		}

		
		while (index < s.length()) {
			if (arrayIndexPosition == 0) {
				while (arrayIndexPosition < numRows) {
					strings[arrayIndexPosition] += s.substring(index, index + 1);
					arrayIndexPosition++;
					index++;
					System.out.println("index0: " + strings[0]);
					System.out.println("index1: " + strings[1]);
					System.out.println("index2: " + strings[2]);
					if (index >= s.length()) {
						break;
					}
				}
				if (index >= s.length()) {
					break;
				}
			}
			if (arrayIndexPosition == numRows) {
				arrayIndexPosition--;
				arrayIndexPosition--;
				while (arrayIndexPosition > 0) {
					strings[arrayIndexPosition] += s.substring(index);
					arrayIndexPosition--;
					index++;
					System.out.println("index0: " + strings[0]);
					System.out.println("index1: " + strings[1]);
					System.out.println("index2: " + strings[2]);
					if (index >= s.length()) {
						break;
					}
				}
			}

		}

		String result = "";
		for (int i = 0; i < numRows; i++) {
			result += strings[i];
			System.out.println(result);
		}

		return result;
	}

}
